          <input type="text" class="form-control" id="dsa-score" name="dsa_score" value="<%= student_details.dsa_score %>" required/>
        </div>
    
        
        <div class="col-md-4">
          <label for="webdev-score" class="form-label" style="
          color: white;
          text-align: center;
          display: flex;
          justify-content: center;
          align-items: center;
        ">WebDev score</label>
          <input type="text" class="form-control" id="webdev-score" name="webdev_score" value="<%= student_details.webdev_score %>"required/>
        </div>
    
        
